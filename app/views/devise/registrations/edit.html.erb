<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, :autofocus => true, placeholder: 'Email', title: 'Email' %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.text_field :fname,  placeholder: 'First Name', title: 'First Name' %></div>

  <div><%= f.text_field :lname,  placeholder: 'Last Name', title: 'Last Name' %></div>

  <div><%= f.password_field :password, placeholder: 'Password', title: 'Password' %></div>

  <div><%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', title: 'Password Confirmation' %></div><br>

  <div><i>(we need your current password to confirm your changes)</i><br>
  <%= f.password_field :current_password, placeholder: 'Current Password', title: 'Current Password' %></div><br>
  
  <div><%= f.submit "Update", class: 'btn' %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn' %></p>

<%= link_to "Back", :back %>
