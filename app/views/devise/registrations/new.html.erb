<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div><br><br>

  <div><%= f.label :first_name %>
  <%= f.text_field :fname %></div><br><br>

  <div><%= f.label :last_name %>
  <%= f.text_field :lname %></div><br><br>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div><br><br>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div><br><br>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
